							"    \"accountType\": \"CHECKING\"\r",
							"  },\r",
							"  {\r",
							"    \"customerId\": 10,\r",
							"    \"accountType\": \"SAVINGS\"\r",
							"  }\r",
							"];\r",
							"\r",
							"customers.forEach(function(customer) {\r",
							"  pm.sendRequest({\r",
							"    url: 'http://localhost:8080/account/create',\r",
							"    method: 'POST',\r",
							"    header: {\r",
							"      'Content-Type': 'application/json'\r",
							"    },\r",
							"    body: {\r",
							"      mode: 'raw',\r",
							"      raw: JSON.stringify({\r",
							"        \"type\": customer.accountType,\r",
							"        \"customerId\": customer.customerId\r",
							"      })\r",
							"    }\r",
							"  }, function(err, res) {\r",
							"    if (err) {\r",
							"      console.error(err);\r",
							"      return;\r",
							"    }\r",
							"    console.log('Conta criada para o cliente', customer.customerId, '(', customer.accountType, '):', res.json());\r",
							"  });\r",
							"});\r",
							""
