							"\r",
							"var pixTypes = [\"EMAIL\", \"PHONE\", \"CPF\", \"RANDOM\"];\r",
							"\r",
							"customers.forEach(function(customer) {\r",
							"  pixTypes.forEach(function(type) {\r",
							"    pm.sendRequest({\r",
							"      url: 'http://localhost:8080/pix/save/',\r",
							"      method: 'POST',\r",
							"      header: {\r",
							"        'Content-Type': 'application/json'\r",
							"      },\r",
							"      body: {\r",
							"        mode: 'raw',\r",
							"        raw: JSON.stringify({\r",
							"          \"type\": type,\r",
							"          \"customerId\": customer.customerId\r",
							"        })\r",
							"      }\r",
							"    }, function(err, res) {\r",
							"      if (err) {\r",
							"        console.error(err);\r",
							"        return;\r",
							"      }\r",
							"      console.log('Chave PIX (' + type + ') criada para o cliente', customer.customerId, ':', res.json());\r",
							"    });\r",
							"  });\r",
							"});\r",
							""
